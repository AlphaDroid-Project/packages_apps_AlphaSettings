<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    xmlns:lineage="http://schemas.android.com/apk/res-auto"
    android:title="@string/quicksettings_title">

    <PreferenceCategory
         android:title="@string/qs_misc_category">

        <!-- QS Header image -->
        <Preference
            android:key="qs_header_image"
            android:icon="@drawable/ic_header"
            android:fragment="com.alpha.settings.fragments.qs.QsHeaderImageSettings"
            android:title="@string/qs_header_image_title"
            android:summary="@string/qs_header_image_summary" />

        <!-- QS clock
        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="show_qs_clock"
            android:icon="@drawable/ic_clock"
            android:title="@string/qs_clock_title"
            android:summary="@string/qs_clock_summary"
            android:defaultValue="true" />

        <com.alpha.settings.preferences.SystemSettingSeekBarPreference
            android:key="qs_header_clock_size"
            android:icon="@drawable/ic_font"
            android:title="@string/clock_font_size_title"
            android:max="27"
            settings:min="10"
            settings:interval="1"
            android:defaultValue="14"
            android:dependency="show_qs_clock"
            settings:units="@string/unit_pixels" /> -->

        <!-- QS date
        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="show_qs_date"
            android:icon="@drawable/ic_calendar"
            android:title="@string/qs_date_title"
            android:summary="@string/qs_date_summary"
            android:defaultValue="true" /> -->


        <!-- Battery styles -->
        <com.alpha.settings.preferences.SystemSettingListPreference
            android:key="qs_battery_style"
            android:title="@string/status_bar_battery_style_title"
            android:entries="@array/qs_battery_style_entries"
            android:entryValues="@array/qs_battery_style_values"
            android:defaultValue="-1" />

        <!-- Battery percent -->
        <com.alpha.settings.preferences.SystemSettingListPreference
            android:key="qs_show_battery_percent"
            android:title="@string/status_bar_battery_percent_title"
            android:entries="@array/status_bar_battery_percent_entries"
            android:entryValues="@array/status_bar_battery_percent_values"
            android:defaultValue="1" />

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="secure_lockscreen_qs_disabled"
            android:icon="@drawable/ic_lock_alert"
            android:title="@string/disable_qs_title"
            android:summary="@string/disable_qs_summary"/>

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_dual_tone"
            android:icon="@drawable/ic_color_bucket"
            android:title="@string/qs_dual_tone_title"
            android:summary="@string/qs_dual_tone_summary"
            android:defaultValue="true" />

        <com.alpha.settings.preferences.SystemSettingSeekBarPreference
            android:key="qs_transparency"
            android:icon="@drawable/ic_color_bucket"
            android:title="@string/qs_opacity_title"
            android:summary="@string/qs_opacity_summary"
            android:defaultValue="100"
            settings:interval="1"
            settings:units="%"
            android:max="100"
            android:min="1" />

        <!-- QS Bluetooth auto on -->
        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_bt_auto_on"
            android:icon="@drawable/ic_bt"
            android:title="@string/qs_bt_auto_on_title"
            android:summary="@string/qs_bt_auto_on_summary"
            android:defaultValue="false" />

        <!-- QS Media Player  -->
        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_compact_media_player_mode"
            android:icon="@drawable/ic_media_compact"
            android:title="@string/qs_compact_media_player_mode_title"
            android:summary="@string/qs_compact_media_player_mode_summary"
            android:defaultValue="true"  />

    </PreferenceCategory>

    <PreferenceCategory
         android:title="@string/qs_brightness_slider_category">

        <!-- Brightness slider -->
        <lineageos.preference.LineageSecureSettingListPreference
            android:key="qs_show_brightness_slider"
            android:icon="@drawable/ic_brightness"
            android:title="@string/qs_show_brightness_slider_title"
            android:entries="@array/qs_show_brightness_slider_entries"
            android:entryValues="@array/qs_show_brightness_slider_values"
            android:defaultValue="1" />

        <lineageos.preference.LineageSecureSettingListPreference
            android:key="qs_brightness_slider_position"
            android:icon="@drawable/ic_brightness"
            android:title="@string/qs_brightness_slider_position_title"
            android:entries="@array/qs_brightness_slider_position_entries"
            android:entryValues="@array/qs_brightness_slider_position_values"
            android:defaultValue="0" />

        <lineageos.preference.LineageSecureSettingSwitchPreference
            android:key="qs_show_auto_brightness"
            android:icon="@drawable/ic_brightness_auto"
            android:title="@string/qs_show_auto_brightness_title"
            android:summary="@string/qs_show_auto_brightness_summary"
            android:defaultValue="true" />

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:title="@string/bb_show_percentage_title"
            android:key="show_brightness_bar_percentage"
            android:icon="@drawable/ic_percent"
            android:summary="@string/bb_show_percentage_summary"
            android:defaultValue="false" />

        <!-- Brightness bar style -->
        <Preference
            android:key="android.theme.customization.bb_style"
            android:icon="@drawable/ic_brightness"
            android:title="@string/theme_customization_brightness_bar_title"
            android:summary="@string/theme_customization_brightness_bar_summary"
            android:fragment="com.alpha.settings.fragments.qs.BrightnessBarStyles" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="qs_layout_category"
        android:title="@string/qs_layout_category_title">

        <!-- QS panel style -->
        <Preference
            android:key="android.theme.customization.qs_style"
            android:icon="@drawable/ic_qs_panel"
            android:title="@string/theme_customization_qs_style_title"
            android:summary="@string/theme_customization_qs_style_summary"
            android:fragment="com.alpha.settings.fragments.qs.QsPanelStyles" />

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_tile_label_hide"
            android:icon="@drawable/ic_text"
            android:title="@string/qs_tile_label_hide_title"
            android:summary="@string/qs_tile_label_hide_summary"
            android:defaultValue="false" />

        <com.alpha.settings.preferences.SystemSettingSeekBarPreference
            android:key="qs_tile_label_size"
            android:icon="@drawable/ic_text"
            android:title="@string/qs_tile_label_size_title"
            android:max="15"
            settings:min="10"
            settings:interval="1"
            settings:units="sp"
            android:defaultValue="14" />

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_tile_vertical_layout"
            android:icon="@drawable/ic_qs_tile"
            android:title="@string/qs_tile_layout_title"
            android:summary="@string/qs_tile_layout_summary"
            android:defaultValue="false" />

        <com.alpha.settings.preferences.SystemSettingSeekBarPreference
            android:key="qs_layout_columns"
            android:icon="@drawable/ic_qs_tile"
            android:title="@string/qs_columns_portrait_title"
            android:max="5"
            settings:min="2"
            settings:interval="1"
            android:defaultValue="2" />

        <com.alpha.settings.preferences.SystemSettingSeekBarPreference
            android:key="qs_layout_columns_landscape"
            android:icon="@drawable/ic_qs_tile"
            android:title="@string/qs_columns_landscape_title"
            android:max="5"
            settings:min="2"
            settings:interval="1"
            android:defaultValue="4" />

        <com.alpha.settings.preferences.SystemSettingSeekBarPreference
            android:key="qqs_layout_rows"
            android:icon="@drawable/ic_qs_tile"
            android:title="@string/qqs_rows_portrait_title"
            android:max="3"
            settings:min="1"
            settings:interval="1"
            android:defaultValue="2" />

        <com.alpha.settings.preferences.SystemSettingSeekBarPreference
            android:key="qqs_layout_rows_landscape"
            android:icon="@drawable/ic_qs_tile"
            android:title="@string/qqs_rows_landscape_title"
            android:max="3"
            settings:min="1"
            settings:interval="1"
            android:defaultValue="1" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_tile_animation_title">

        <com.alpha.settings.preferences.SystemSettingListPreference
            android:key="qs_tile_animation_style"
            android:icon="@drawable/ic_qs_tile_animation_style"
            android:title="@string/qs_tile_animation_style_title"
            android:entries="@array/qs_tile_animation_style_entries"
            android:entryValues="@array/qs_tile_animation_style_values"
            android:defaultValue="0" />

        <com.alpha.settings.preferences.SystemSettingSeekBarPreference
            android:key="qs_tile_animation_duration"
            android:icon="@drawable/ic_clock"
            android:title="@string/qs_tile_animation_duration_title"
            android:defaultValue="1"
            settings:interval="1"
            settings:units="@string/unit_seconds"
            android:max="5"
            android:min="1" />

        <com.alpha.settings.preferences.SystemSettingListPreference
            android:key="qs_tile_animation_interpolator"
            android:icon="@drawable/ic_qs_tile_animation_interpolator"
            android:title="@string/qs_tile_animation_interpolator_title"
            android:entries="@array/qs_tile_animation_interpolator_entries"
            android:entryValues="@array/qs_tile_animation_interpolator_values"
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory
         android:title="@string/qs_footer_category">

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_show_data_usage"
            android:icon="@drawable/ic_swap_vertical"
            android:title="@string/qs_footer_datausage_title"
            android:summary="@string/qs_footer_datausage_summary" />

        <!--<com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_warnings"
            android:icon="@drawable/ic_key"
            android:title="@string/qs_footer_warnings_title"
            android:summary="@string/qs_footer_warnings_summary"
            android:defaultValue="true"/>

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_user"
            android:icon="@drawable/ic_account"
            android:title="@string/qs_footer_users_icon_title"
            android:summary="@string/qs_footer_users_icon_summary"
            android:defaultValue="true" />

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_edit"
            android:icon="@drawable/ic_pencil"
            android:title="@string/qs_footer_edit_icon_title"
            android:defaultValue="true" />

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_power_menu"
            android:icon="@drawable/ic_power"
            android:title="@string/qs_footer_show_power_menu_title"
            android:defaultValue="true" />

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_services"
            android:icon="@drawable/ic_services"
            android:title="@string/qs_footer_services_icon_title" />

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_footer_show_settings"
            android:icon="@drawable/ic_settings_main"
            android:title="@string/qs_footer_settings_icon_title"
            android:defaultValue="true" />-->

        <com.alpha.settings.preferences.SystemSettingSwitchPreference
            android:key="notification_material_dismiss"
            android:icon="@drawable/ic_notification_clear_all"
            android:title="@string/notification_material_dismiss_title"
            android:summary="@string/notification_material_dismiss_summary" />

    </PreferenceCategory>
</PreferenceScreen>
